---
import UseToggleMenu from "../components/UseToggleMenu.astro";
export interface Props {
  title?: string;
}
const { title = "Marcel's cool website." } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth 2xl:text-[20px]">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>

  <body class="antialiased text-gray-900tracking-tight bg-white">
    <slot />
    <UseToggleMenu />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
