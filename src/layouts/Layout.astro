---
import "../styles/base.css";
import UseToggleMenu from "../components/UseToggleMenu.astro";
export interface Props {
  title?: string;
}
const { title = "Marcel's cool website" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth 2xl:text-[20px]">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="theme-color" content="#1741bf" />
    <title>{title}</title>
  </head>

  <body class="antialiased bg-white">
    <slot />
    <UseToggleMenu />
    <style is:global>
      img {
        content-visibility: auto;
      }
      .example::-webkit-scrollbar {
        display: none;
      }
    </style>
  </body>
</html>
