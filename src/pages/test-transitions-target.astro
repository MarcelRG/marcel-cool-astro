---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Transition Target">
  <Header />
  <main class="p-8 max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Transition Target Page</h1>

    <div class="space-y-8">
      <!-- Same image but different position/size to test transition -->
      <section class="border p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Transitioned Image</h2>
        <div class="flex justify-center">
          <img
            src="/images/analisa.webp"
            alt="Test Image"
            class="w-96 h-64 object-cover rounded-lg shadow-lg"
            transition:name="test-image"
          />
        </div>
        <p class="text-center mt-4 text-gray-600">
          This image should have smoothly transitioned from the previous page
        </p>
      </section>

      <!-- Same title but different styling -->
      <section class="border p-6 rounded-lg">
        <div class="text-center">
          <h1
            class="text-4xl font-bold text-purple-600"
            transition:name="test-title"
          >
            Test Title That Will Transition
          </h1>
          <p class="mt-4 text-gray-600">
            This title should have smoothly morphed from the previous page
          </p>
        </div>
      </section>

      <!-- Test results -->
      <section class="border p-6 rounded-lg bg-green-50">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="space-y-2">
          <p>
            <strong>✅ Expected:</strong> The image smoothly animated from small
            to large
          </p>
          <p>
            <strong>✅ Expected:</strong> The title smoothly morphed and changed
            color
          </p>
          <p>
            <strong>✅ Expected:</strong> The page didn't flash or reload
            abruptly
          </p>
        </div>

        <div class="mt-4">
          <h3 class="font-semibold mb-2">What to look for:</h3>
          <ul class="list-disc list-inside space-y-1 text-sm">
            <li>Smooth animation between the two states</li>
            <li>No white flash during navigation</li>
            <li>Elements appear to "move" rather than disappear/reappear</li>
            <li>Check browser console for any transition events</li>
          </ul>
        </div>
      </section>

      <!-- Navigation -->
      <section class="border p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Navigation</h2>
        <div class="space-x-4">
          <a
            href="/test-transitions"
            class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
          >
            ← Back to Test Page
          </a>
          <a
            href="/blog"
            class="inline-block px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600"
          >
            Test Blog Transitions
          </a>
          <a
            href="/projects"
            class="inline-block px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-600"
          >
            Test Project Transitions
          </a>
        </div>
      </section>
    </div>
  </main>

  <script>
    // Log when this page loads
    console.log("Target page loaded");

    // Check if we arrived via a view transition
    document.addEventListener("DOMContentLoaded", () => {
      console.log("Target page: DOM content loaded");

      // Check for transition elements
      const testImage = document.querySelector(
        '[transition\\:name="test-image"]'
      );
      const testTitle = document.querySelector(
        '[transition\\:name="test-title"]'
      );
      console.log("Target page - Test image element:", testImage);
      console.log("Target page - Test title element:", testTitle);
    });
  </script>
</Layout>
