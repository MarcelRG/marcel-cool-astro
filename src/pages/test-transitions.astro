---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Test Transitions">
  <Header />
  <main class="p-8 max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">View Transitions Test Page</h1>

    <div class="space-y-8">
      <!-- Test 1: Simple image transition -->
      <section class="border p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Test 1: Image Transition</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">
              Source (click to go to target)
            </h3>
            <a href="/test-transitions-target">
              <img
                src="/images/analisa.webp"
                alt="Test Image"
                class="w-48 h-32 object-cover rounded border-2 border-blue-500"
                transition:name="test-image"
              />
            </a>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">
              Expected: Smooth transition to target page
            </h3>
            <p class="text-gray-600">
              The image should smoothly animate when clicking the link.
            </p>
          </div>
        </div>
      </section>

      <!-- Test 2: Text transition -->
      <section class="border p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Test 2: Text Transition</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">Source Text</h3>
            <a href="/test-transitions-target">
              <h3
                class="text-xl text-blue-600 hover:text-blue-800"
                transition:name="test-title"
              >
                Test Title That Will Transition
              </h3>
            </a>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">
              Expected: Text morphs smoothly
            </h3>
            <p class="text-gray-600">
              The title should smoothly transform to the target page.
            </p>
          </div>
        </div>
      </section>

      <!-- Test 3: Debug information -->
      <section class="border p-6 rounded-lg bg-gray-50">
        <h2 class="text-2xl font-bold mb-4">Debug Information</h2>
        <div class="space-y-2 text-sm font-mono">
          <p>
            <strong>ViewTransitions enabled:</strong>
            <span id="vt-enabled">Checking...</span>
          </p>
          <p>
            <strong>Browser support:</strong>
            <span id="browser-support">Checking...</span>
          </p>
          <p>
            <strong>Document transition API:</strong>
            <span id="transition-api">Checking...</span>
          </p>
        </div>

        <div class="mt-4">
          <h3 class="font-semibold mb-2">Console Log Test</h3>
          <div class="space-x-2">
            <button
              class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
              onclick="testTransitions()"
            >
              Run Basic Tests
            </button>
            <button
              class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600"
              onclick="runTransitionTests()"
            >
              Run Full Test Suite
            </button>
          </div>
          <p class="text-sm text-gray-600 mt-2">
            Open browser console (F12) to see detailed test results
          </p>
        </div>
      </section>

      <!-- Navigation back to main pages -->
      <section class="border p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4">Test Real Transitions</h2>
        <div class="space-x-4">
          <a
            href="/blog"
            class="inline-block px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600"
          >
            Go to Blog (Test Real Blog Transitions)
          </a>
          <a
            href="/projects"
            class="inline-block px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-600"
          >
            Go to Projects (Test Real Project Transitions)
          </a>
          <a
            href="/"
            class="inline-block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600"
          >
            Go to Home
          </a>
        </div>
      </section>
    </div>
  </main>

  <script src="/test-transitions.js" is:inline></script>
  <script>
    // Check if ViewTransitions are working
    function checkViewTransitions() {
      const vtEnabled = document.querySelector(
        'meta[name="astro-view-transitions-enabled"]'
      );
      const vtEnabledEl = document.getElementById("vt-enabled");
      if (vtEnabledEl) vtEnabledEl.textContent = vtEnabled ? "Yes" : "No";

      const browserSupport = "startViewTransition" in document;
      const browserSupportEl = document.getElementById("browser-support");
      if (browserSupportEl)
        browserSupportEl.textContent = browserSupport ? "Yes" : "No";

      const transitionAPI = typeof document.startViewTransition === "function";
      const transitionAPIEl = document.getElementById("transition-api");
      if (transitionAPIEl)
        transitionAPIEl.textContent = transitionAPI ? "Yes" : "No";
    }

    function testTransitions() {
      console.log("=== View Transitions Test ===");
      console.log(
        "ViewTransitions meta tag:",
        document.querySelector('meta[name="astro-view-transitions-enabled"]')
      );
      console.log(
        "Browser supports View Transition API:",
        "startViewTransition" in document
      );
      console.log(
        "Document startViewTransition:",
        typeof document.startViewTransition
      );

      // Check for transition names in DOM
      const elementsWithTransitions = document.querySelectorAll(
        "[data-astro-transition-scope]"
      );
      console.log(
        "Elements with transition scopes:",
        elementsWithTransitions.length
      );
      elementsWithTransitions.forEach((el, i) => {
        console.log(
          `Element ${i}:`,
          el.tagName,
          el.getAttribute("data-astro-transition-scope")
        );
      });

      // Check for specific test elements
      const testImage = document.querySelector(
        '[transition\\:name="test-image"]'
      );
      const testTitle = document.querySelector(
        '[transition\\:name="test-title"]'
      );
      console.log("Test image element:", testImage);
      console.log("Test title element:", testTitle);

      console.log("=== End Test ===");
    }

    // Run checks when page loads
    document.addEventListener("DOMContentLoaded", checkViewTransitions);

    // Listen for view transition events
    document.addEventListener("astro:before-preparation", () => {
      console.log("Astro: Before preparation");
    });

    document.addEventListener("astro:before-swap", () => {
      console.log("Astro: Before swap");
    });

    document.addEventListener("astro:after-swap", () => {
      console.log("Astro: After swap");
    });
  </script>
</Layout>
